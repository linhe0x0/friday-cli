{
  "name": "@sqrtthree/friday-cli",
  "version": "0.3.0",
  "description": "Command line tools for Friday. Generate, write and run an application with one single command.",
  "main": "dist/index.js",
  "bin": {
    "friday": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "prebuild": "npm run lint",
    "build": "rm -r dist && tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "npm run type-check && eslint --ext ts ./src",
    "lint-with-fix": "eslint --ext ts --fix ./src",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqrthree/friday-cli.git"
  },
  "keywords": [],
  "author": "sqrtthree <imsqrtthree@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sqrthree/friday-cli/issues"
  },
  "homepage": "https://github.com/sqrthree/friday-cli#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "dependencies": {
    "boxen": "~5.0.0",
    "chalk": "~4.1.0",
    "chokidar": "~3.5.1",
    "clipboardy": "~2.3.0",
    "consola": "~2.15.3",
    "get-port": "~5.1.1",
    "ip": "~1.1.5",
    "lodash": "~4.17.21",
    "yargs": "~17.0.1"
  },
  "devDependencies": {
    "@sqrtthree/eslint-config-ts": "~0.1.0",
    "@sqrtthree/friday": "~1.1.0",
    "@sqrtthree/prettier-config": "~2.0.1",
    "@sqrtthree/tsconfig": "~0.1.0",
    "@types/node": "~15.6.0",
    "@types/yargs": "~17.0.0",
    "eslint": "~7.27.0",
    "husky": "~6.0.0",
    "jest": "~26.6.3",
    "lint-staged": "~11.0.0",
    "prettier": "~2.3.0",
    "typescript": "~4.2.4"
  },
  "peerDependencies": {
    "@sqrtthree/friday": ">= 1.1.0"
  }
}
