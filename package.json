{
  "name": "@sqrtthree/friday-cli",
  "version": "0.2.0",
  "description": "Command line tools for Friday. Generate, write and run an application with one single command.",
  "main": "dist/index.js",
  "bin": {
    "friday": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "prebuild": "npm run lint",
    "build": "rm -r dist && tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "npm run type-check && eslint --ext ts ./src",
    "lint-with-fix": "eslint --ext ts --fix ./src",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqrthree/friday-cli.git"
  },
  "keywords": [],
  "author": "sqrtthree <imsqrtthree@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sqrthree/friday-cli/issues"
  },
  "homepage": "https://github.com/sqrthree/friday-cli#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "dependencies": {
    "boxen": "~5.0.0",
    "chalk": "~4.1.0",
    "chokidar": "~3.5.1",
    "clipboardy": "~2.3.0",
    "consola": "~2.15.3",
    "get-port": "~5.1.1",
    "ip": "~1.1.5",
    "lodash": "~4.17.21",
    "yargs": "~16.2.0"
  },
  "devDependencies": {
    "@sqrtthree/prettier-config": "~2.0.1",
    "@sqrtthree/tsconfig": "~0.1.0",
    "@types/node": "~14.14.31",
    "@types/yargs": "~16.0.0",
    "@typescript-eslint/eslint-plugin": "~4.15.2",
    "@typescript-eslint/parser": "~4.15.2",
    "eslint": "~7.20.0",
    "eslint-config-airbnb-base": "~14.2.1",
    "eslint-config-prettier": "~8.1.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-prettier": "~3.3.1",
    "husky": "~5.1.1",
    "lint-staged": "~10.5.4",
    "prettier": "~2.2.1",
    "typescript": "~4.2.2"
  },
  "peerDependencies": {
    "@sqrtthree/friday": ">= 1.0.1"
  }
}
