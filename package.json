{
  "name": "@sqrtthree/friday-cli",
  "version": "0.4.0",
  "description": "Command line tools for Friday. Generate, write and run an application with one single command.",
  "main": "dist/index.js",
  "bin": {
    "friday": "./dist/index.js",
    "friday-cli": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "prebuild": "npm run lint",
    "build": "rm -r dist && tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "npm run type-check && eslint --ext ts ./src",
    "lint-with-fix": "eslint --ext ts --fix ./src",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sqrthree/friday-cli.git"
  },
  "keywords": [],
  "author": "sqrtthree <imsqrtthree@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sqrthree/friday-cli/issues"
  },
  "homepage": "https://github.com/sqrthree/friday-cli#readme",
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  },
  "dependencies": {
    "@babel/code-frame": "~7.16.7",
    "@babel/core": "~7.17.2",
    "@koa/router": "~10.1.1",
    "@sqrtthree/tsconfig": "~2.0.0",
    "boxen": "~5.0.0",
    "chalk": "~4.1.2",
    "chokidar": "~3.5.2",
    "clipboardy": "~2.3.0",
    "consola": "~2.15.3",
    "eslint": "~8.9.0",
    "fast-glob": "~3.2.11",
    "get-port": "~5.1.1",
    "ip": "~1.1.5",
    "koa": "~2.13.4",
    "lodash": "~4.17.21",
    "minimist": "~1.2.5",
    "ms": "~2.1.3",
    "read-pkg-up": "7.0.1",
    "rimraf": "~3.0.2",
    "typescript": "~4.5.4",
    "uuid": "~8.3.2",
    "yargs": "~17.3.1"
  },
  "devDependencies": {
    "@sqrtthree/eslint-config-ts": "~0.3.0",
    "@sqrtthree/friday": "~1.4.0",
    "@sqrtthree/prettier-config": "~2.0.1",
    "@types/eslint": "~8.4.1",
    "@types/lodash": "~4.14.178",
    "@types/node": "~17.0.10",
    "@types/yargs": "~17.0.8",
    "husky": "~7.0.4",
    "jest": "~27.5.1",
    "lint-staged": "~13.0.1",
    "prettier": "~2.5.1"
  },
  "peerDependencies": {
    "@sqrtthree/friday": ">= 1.4.0"
  }
}
